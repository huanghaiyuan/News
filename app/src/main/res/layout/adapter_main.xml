<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/x8">

    <ImageView
        android:id="@+id/adapter_img"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x100"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/adapter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/x12"
        android:layout_toRightOf="@id/adapter_img"
        android:layout_marginLeft="@dimen/x8"/>

    <TextView
        android:id="@+id/adapter_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="4"
        android:textSize="@dimen/x10"
        android:layout_alignLeft="@id/adapter_title"
        android:layout_below="@id/adapter_title"
        android:layout_marginTop="@dimen/x5"/>

    <TextView
        android:id="@+id/adapter_timeAndsource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x2"/>

</RelativeLayout>
